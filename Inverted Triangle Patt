#include <stdio.h>

int main()
{
    int n, i, j, space;
    printf("Enter the height of the triangle: ");
    scanf("%d", &n);

    for (i = n - 1; i >= 0; i--)
    {
        for (space = 0; space < n - i - 1; space++)
            printf(" ");
        for (j = 0; j < 2 * i + 1; j++)
            printf("*");
        printf("\n");
    }
    return 0;
}
