#include <stdio.h>

struct Employee
{
    char name[50];
    int id;
    char department[30];
    float salary;
};

void input(struct Employee *e)
{
    printf("Enter name: ");
    scanf("%s", e->name);
    printf("Enter ID: ");
    scanf("%d", &e->id);
    printf("Enter department: ");
    scanf("%s", e->department);
    printf("Enter salary: ");
    scanf("%f", &e->salary);
}

void display(struct Employee e)
{
    printf("\nEmployee Details\n");
    printf("Name: %s\n", e.name);
    printf("ID: %d\n", e.id);
    printf("Department: %s\n", e.department);
    printf("Salary: %.2f\n", e.salary);
}

int main()
{
    struct Employee emp;
    input(&emp);
    display(emp);
    return 0;
}
